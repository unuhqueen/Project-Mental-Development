<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/closeB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="닫기"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="한국 우울 검사"
            android:textColor="#86C86F"
            android:gravity="center"
            android:textSize="26dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/attention"
            android:textSize="13dp"
            android:layout_margin="10dp"
            android:textColor="#527746"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/rescon"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textColor="#FFFFFF"
            android:background="#86C86F"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="@string/res1"
            />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/rd0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 거의 드물게 (1일 이하)"
                android:textColor="#527746"
                android:layout_margin="3dp"/>

            <RadioButton
                android:id="@+id/rd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. 때로 (1-2일)"
                android:textColor="#527746"
                android:layout_margin="3dp"/>

            <RadioButton
                android:id="@+id/rd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. 상당히 (3-4일)"
                android:textColor="#527746"
                android:layout_margin="3dp"/>

            <RadioButton
                android:id="@+id/rd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. 대부분(5-7일)"
                android:textColor="#527746"
                android:layout_margin="3dp"/>

            <TextView
                android:id="@+id/pagenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#527746"
                android:gravity="center"
                />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/preButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"/>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"/>
    </LinearLayout>



</LinearLayout>
