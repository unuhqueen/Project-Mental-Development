<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResStart"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/closeB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닫기"
        android:gravity="center"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한국 우울 검사"
        android:layout_gravity="center"
        android:textSize="20dp"

        android:textColor="#86C86F"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(역학연구를 위한 우울척도 (CES-D))"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginBottom="50dp"
        android:textColor="#86C86F"
        />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#527746">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="1dp"

                android:gravity="center"
                android:padding="3dp"
                android:text="문항 수"
                android:textColor="#527746"
                android:background="#FFFFFF"/>

            <TextView
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="20"
                android:textColor="#527746"
                android:background="#FFFFFF"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#527746">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="대상"
                android:textColor="#527746"
                android:background="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="전 연령"
                android:textColor="#527746"
                android:background="#FFFFFF"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#527746">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="소요시간"
                android:textColor="#527746"
                android:background="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"

                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="3dp"
                android:text="3분"
                android:textColor="#527746" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#527746">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:gravity="center"
                android:padding="3dp"
                android:text="설명\n"
                android:textColor="#527746"
                android:background="#FFFFFF"/>

            <TextView
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="3dp"
                android:text="우울 정도를 살펴보고 우울증의 예방, 조기 발견 및 추적 관리를 위한 검사입니다."
                android:textColor="#527746" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="141dp"
        android:layout_margin="30dp"
        android:text="이 검사지는 전겸구, 최상진, 양병창(2001). 통합적 한국판 CES-D 개발. 한국심리학회지:건강, 6(1), 59-76. 출처를 대상으로 만들어졌습니다"
        android:textSize="13dp" />

    <Button
        android:id="@+id/nextB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:gravity="center"
        android:layout_gravity="center"/>


</LinearLayout>
